<Window x:Class="WpfProjectStructureApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProjectStructureApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top" Height="34" FontSize="26">
            <MenuItem Header="File">
                <MenuItem Icon="" Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar  Height="30" VerticalAlignment="Top">
                <Button>btn1</Button>
                <Button>btn2</Button>
                <Button>btn3</Button>
                <Button>btn4</Button>
            </ToolBar>
            <ToolBar DockPanel.Dock="Top" Height="30" VerticalAlignment="Top">
                <Button>btn11</Button>
                <Button>btn22</Button>
                <Button>btn33</Button>
                <Button>btn44</Button>
            </ToolBar>
        </ToolBarTray>
        
    </DockPanel>
</Window>
